<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:id="@+id/rlGeraet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="016824587748"
        android:id="@+id/tvSeriennummer"
        android:textColor="@color/white200"
        android:lineSpacingMultiplier="0.2"
        android:textSize="16sp"
        android:layout_below="@+id/tvBeschreibung"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surface Pro 10"
        android:id="@+id/tvBeschreibung"
        android:textColor="@color/white200"
        android:lineSpacingMultiplier="0.2"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvVerliehen"
        android:layout_alignStart="@+id/tvVerliehen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verliehen an Max Mustermann"
        android:id="@+id/tvVerliehen"
        android:textColor="@color/white200"
        android:lineSpacingMultiplier="0.2"
        android:textSize="14sp"
        android:layout_below="@+id/tvSeriennummer"
        android:layout_alignLeft="@+id/tvSeriennummer"
        android:layout_alignStart="@+id/tvSeriennummer" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/listview_next"
        android:layout_marginRight="0dp" />
</RelativeLayout>