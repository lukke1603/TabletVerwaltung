<resources>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/buttons</item>
    </style>



    <style name="etLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white50</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white200</item>
        <item name="colorControlNormal">@color/white50</item>
        <item name="colorControlActivated">@color/white200</item>
    </style>


    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="android:textColor">@color/white200</item>
        <item name="android:textColorHint">@color/white200</item>
        <item name="colorAccent">@color/white200</item>
        <item name="android:windowTitleStyle">@style/AlertDialogTitle</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white200</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>


    <style name="loadingSpinner" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/white200</item>
    </style>




    <style name="AlertDialogTitle">
        <item name="android:textColor">@color/white200</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

</resources>
