<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:id="@+id/rlGeraet">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rlTop"
        android:padding="0dp"
        android:layout_margin="0dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivVerfuegbarkeit"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/circle_green"
            android:layout_centerVertical="true"
            android:layout_margin="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surface Pro 10"
            android:id="@+id/tvBeschreibung"
            android:textColor="@color/white200"
            android:lineSpacingMultiplier="0.2"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentTop="false"
            android:layout_toRightOf="@+id/ivVerfuegbarkeit"
            android:layout_toEndOf="@+id/ivVerfuegbarkeit"
            android:layout_marginLeft="5dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="016824587748"
        android:id="@+id/tvSeriennummer"
        android:textColor="@color/white200"
        android:lineSpacingMultiplier="0.2"
        android:textSize="16sp"
        android:layout_below="@+id/rlTop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verliehen an Max Mustermann"
        android:id="@+id/tvVerliehen"
        android:textColor="@color/white200"
        android:lineSpacingMultiplier="0.2"
        android:textSize="14sp"
        android:layout_below="@+id/tvSeriennummer"
        android:layout_alignLeft="@+id/tvSeriennummer"
        android:layout_alignStart="@+id/tvSeriennummer" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/listview_next"
        android:layout_marginRight="0dp" />

</RelativeLayout>